package dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import model.Tarefa;

public class TarefaDAO {
    public List<Tarefa> listar() {
        List<Tarefa> tarefas = new ArrayList<Tarefa>(); 
        Tarefa tarefa = null;
        Connection cnx = Dao.getConexao(); 
        
        String SQL = "SELECT * FROM tarefas"; 
        
        PreparedStatement ps = null;
        ResultSet rs = null;
        
        try {
            ps = cnx.prepareStatement(SQL); 
            rs = ps.executeQuery(); 
            
            while (rs.next()) { 
                tarefa = new Tarefa();
                
                tarefa.setId(rs.getInt("id"));
                tarefa.setDescricao(rs.getString("descricao"));
                
                // Usando getDate para o campo 'prazo' se for do tipo DATE
                tarefa.setPrazo(rs.getDate("prazo"));
                
                // Certificando-se de que a coluna 'concluida' existe e est√° com o nome correto
                tarefa.setConcluida(rs.getBoolean("concluida"));
                
                tarefas.add(tarefa);
            }
        } catch (SQLException e) {
            e.printStackTrace(); 
        } finally {
            if (rs != null) {
                try {
                    rs.close();
                } catch (SQLException e) {
                    e.printStackTrace();
                }
            }
            
            if (ps != null) {
                try {
                    ps.close();
                } catch (SQLException e) {
                    e.printStackTrace();
                }
            }
        }
        
        return tarefas; 
    }
}
