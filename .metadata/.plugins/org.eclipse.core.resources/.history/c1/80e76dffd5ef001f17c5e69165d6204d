import java.util.List;

import model.Tarefa;

public class TarefaService {

    public List<Tarefa> listar() {
        TarefaDAO dao = new TarefaDAO();
        return dao.listar();
    }

    public Tarefa buscarPorId(int id) {
        TarefaDAO dao = new TarefaDAO();
        return dao.buscarPorId(id);
    }
}
